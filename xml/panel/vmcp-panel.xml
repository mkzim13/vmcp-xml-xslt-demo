<?xml version="1.0" encoding="UTF-8"?>
<Panel>
    <!-- ===========================
         Altitude Selector
         =========================== -->
    <AltitudeSelector>
        <!-- Altitude changes in 100â€‘ft increments -->
        <Increment>100</Increment>

        <!-- Push = Managed Climb/Descent (CLB/DES) -->
        <SupportsPush>true</SupportsPush>

        <!-- Pull = Open Climb/Descent (OP CLB / OP DES) -->
        <SupportsPull>true</SupportsPull>
    </AltitudeSelector>

    <!-- ===========================
         V/S and FPA Selector
         =========================== -->
    <VSFPASelector>
        <!-- Vertical Speed range in ft/min -->
        <VSRange>
            <Min>-6000</Min>
            <Max>6000</Max>
        </VSRange>

        <!-- Flight Path Angle range in degrees -->
        <FPARange>
            <Min>-9.0</Min>
            <Max>9.0</Max>
        </FPARange>

        <!-- Push toggles between V/S and FPA display formats -->
        <SupportsPush>true</SupportsPush>

        <!-- Pull activates V/S or FPA mode -->
        <SupportsPull>true</SupportsPull>
    </VSFPASelector>

    <!-- ===========================
         Mode Selection Controls
         =========================== -->
    <ModeControls>
        <!-- Open Climb button available -->
        <SupportsOPCLB>true</SupportsOPCLB>

        <!-- Open Descent button available -->
        <SupportsOPDES>true</SupportsOPDES>

        <!-- Managed Climb/Descent (CLB/DES) available -->
        <SupportsManagedModes>true</SupportsManagedModes>
    </ModeControls>

    <!-- ===========================
         Annunciation Display
         =========================== -->
    <AnnunciationDisplay>
        <!-- Shows active vertical mode (e.g., V/S, OP CLB, ALT) -->
        <ShowsActiveMode>true</ShowsActiveMode>

        <!-- Shows armed mode (e.g., ALT*) -->
        <ShowsArmedMode>true</ShowsArmedMode>

        <!-- Shows target values (e.g., +1200 ft/min, +3.0Â° FPA) -->
        <ShowsTargetValues>true</ShowsTargetValues>
    </AnnunciationDisplay>
</Panel>

